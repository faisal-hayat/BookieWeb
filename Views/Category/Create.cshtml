@model Category

<form method="post">
    <div class="border p-3 mt-4">
        
        <!-- first field --> 
        <div class="row pb-2">
             <h2 class="text-primary">Create Category</h2>
             <hr />
         </div>
        <div class="row mb-3">
             <label>Category Name</label>
             <input class="form-control" asp-for="Name" />
         </div>
        
         <!-- second field -->
        <div class="row mb-3">
            <label>Display Order</label>
            <input class="form-control" asp-for="DisplayOrders" />
        </div>
        
        <!-- Add an button -->
        <div class="row align-items-center">
            <div class="col-6 col-md-3">
                <button class="btn btn-primary form-control" asp-action="Create" type="submit">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <!-- Add back button -->
                <button class="btn btn-outline-secondary border-2 bg-dark form-control" asp-action="Index">Go Back</button>
            </div>
        </div>
    </div>
</form>